<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="4dp"
    tools:context="com.example.julian.rentnertreff.Fragments.DetailSubfragment_Fakten">

    <!-- TODO: Update blank fragment layout -->

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/besteck"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                app:srcCompat="@android:drawable/ic_delete" />

            <TextView
                android:id="@+id/essen_value"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/textabstand"
                android:text="preiswert"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/rollstuhl"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                app:srcCompat="@drawable/behindertengerecht" />

            <TextView
                android:id="@+id/rollstuhlgerecht"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/textabstand"
                android:text="nicht rollstuhlgerecht  "
                android:textSize="@dimen/table" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/pfote"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                app:srcCompat="@drawable/hund" />

            <TextView
                android:id="@+id/haustiere"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/textabstand"
                android:text="Haustiere erlaubt"
                android:textSize="@dimen/table" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/infopunkt"
                android:layout_width="@dimen/icon_small"
                android:layout_height="@dimen/icon_small"
                app:srcCompat="@drawable/sonstiges" />

            <TextView
                android:id="@+id/sonstiges"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/textabstand"
                android:text="Wanderschuhe notwendig"
                android:textSize="@dimen/table" />

        </TableRow>
    </TableLayout>
</FrameLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.julian.rentnertreff.Fragments.DetailSubfragment_Veranstalterinfo">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="Veranstalter:"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameVeranstalter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:text="Tim MÃ¼ller"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@+id/imageVerabstalter"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text" />

        <TextView
            android:id="@+id/telefonVeranstalter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="015787773489"
            android:textSize="24sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/nameVeranstalter"
            app:layout_constraintLeft_toRightOf="@+id/imageVerabstalter"
            android:layout_marginLeft="8dp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@android:style/Widget.Holo.RatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/telefonVeranstalter"
            app:layout_constraintLeft_toRightOf="@+id/imageVerabstalter"
            android:layout_marginLeft="8dp" />

        <ImageView
            android:id="@+id/imageVerabstalter"
            android:layout_width="106dp"
            android:layout_height="135dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@android:drawable/ic_menu_myplaces"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text" />


    </android.support.constraint.ConstraintLayout>

</FrameLayout>
